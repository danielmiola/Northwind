@model Northwind.Models.Employees

<dl class="dl-horizontal">
    
    <dt>Name</dt>
    <dd>@Html.DisplayFor(model => model.TitleOfCourtesy) @Html.DisplayFor(model => model.FirstName) @Html.DisplayFor(model => model.LastName)</dd>

    <dt>Title</dt>
    <dd>@Html.DisplayFor(model => model.Title)</dd>

    <dt>Birth date</dt>
    <dd>@Html.DisplayFor(model => model.BirthDate)</dd>

    <dt>Hire date</dt>
    <dd>@Html.DisplayFor(model => model.HireDate)</dd>

    <dt>Address</dt>
    <dd>@Html.DisplayFor(model => model.Address)</dd>

    <dt>City</dt>
    <dd>@Html.DisplayFor(model => model.City)</dd>

    <dt>Region</dt>
    <dd>@Html.DisplayFor(model => model.Region)</dd>

    <dt>Postal code</dt>
    <dd>@Html.DisplayFor(model => model.PostalCode)</dd>

    <dt>Country</dt>
    <dd>@Html.DisplayFor(model => model.Country)</dd>

    <dt>Home phone</dt>
    <dd>@Html.DisplayFor(model => model.HomePhone)</dd>

    <dt>Extension</dt>
    <dd>@Html.DisplayFor(model => model.Extension)</dd>

    <dt>Notes</dt>
    <dd>@Html.DisplayFor(model => model.Notes)</dd>

    <dt>Reports to</dt>
    <dd>@Html.DisplayFor(model => model.Employees2.LastName)</dd>

    <hr />

    <dt>Territories</dt>
    <dd>
        @foreach (var item in Model.Territories)
        {
            <p>@Html.DisplayFor(itemModel => item.TerritoryDescription) / @Html.DisplayFor(itemModel => item.Region.RegionDescription)</p>
        }
    </dd>

</dl>