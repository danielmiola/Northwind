@model IEnumerable<Northwind.Models.Employees>

@{
    ViewBag.Title = "Employees";
}

<h2>Employees</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-hover table-striped" id="grid-data">
    <thead>
        <tr>
            <th data-column-id="name">Name</th>
            <th data-column-id="title">Title</th>
            <th data-column-id="city">City</th>
            <th data-column-id="country">Country</th>
            <th data-column-id="phone">Phone</th>
            <th data-column-id="reports">Reports to</th>
            <th></th>
        </tr>
    </thead>
    <tbody id="tbody" hidden>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName) @Html.DisplayFor(modelItem => item.LastName) 
                </td>
                <td>@Html.DisplayFor(modelItem => item.Title)</td>
                <td>@Html.DisplayFor(modelItem => item.City)</td>
                <td>@Html.DisplayFor(modelItem => item.Country)</td>
                <td>@Html.DisplayFor(modelItem => item.HomePhone)</td>
                <td>@Html.DisplayFor(modelItem => item.Employees2.LastName)</td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.EmployeeID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.EmployeeID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.EmployeeID })
                </td>
            </tr>
        }
    </tbody>
</table>
