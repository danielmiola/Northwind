<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Northwind</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Northwind", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
            </div>
        </div>
    </div>
    <div class="container body-content">
        <div class="row">
            <div class="col-md-2 no-pad" role="complementary">
                <div data-spy="affix" data-offset-top="5" data-offset-bottom="100" id="myAffix">
                    <div id="sidebar">
                        <ul class="nav nav-stacked" id="accordion1">
                            <li class="sidebar-link">@Html.ActionLink("Orders", "Index", "Orders")</li>
                            <li class="sidebar-link">@Html.ActionLink("Customers", "Index", "Customers")</li>
                            <li>
                                <a id="collapse1" data-toggle="collapse" data-parent="#accordion1" href="#employees" class=""><span class="glyphicon glyphicon-chevron-down small"></span> Employees</a>
                                <ul id="employees" class="collapse">
                                    <li class="sidebar-link-in">@Html.ActionLink("Index", "Index", "Employees")</li>
                                    <li class="sidebar-link-in">@Html.ActionLink("Territories", "Index", "Territories")</li>
                                    <li class="sidebar-link-in">@Html.ActionLink("Regions", "Index", "Region")</li>
                                </ul>
                            </li>
                            <li>
                                <a id="collapse2" data-toggle="collapse" data-parent="#accordion1" href="#products" class=""><span class="glyphicon glyphicon-chevron-down small"></span> Products</a>
                                <ul id="products" class="collapse">
                                    <li class="sidebar-link-in">@Html.ActionLink("Index", "Index", "Products")</li>
                                    <li class="sidebar-link-in">@Html.ActionLink("Categories", "Index", "Categories")</li>
                                    <li class="sidebar-link-in">@Html.ActionLink("Suppliers", "Index", "Suppliers")</li>
                                </ul>
                            </li>
                            <li class="sidebar-link">@Html.ActionLink("Shippers", "Index", "Shippers")</li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-md-10" role="main">
                @RenderBody()
            </div>
        </div>
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Northwind</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
