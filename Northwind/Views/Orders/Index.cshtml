@model IEnumerable<Northwind.Models.Orders>

@{
    ViewBag.Title = "Orders";
}

<h2>Orders</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-hover table-striped" id="grid-data">
    <thead>
        <tr>
            <th data-column-id="date">Date</th>
            <th data-column-id="customer">Customer</th>
            <th data-column-id="employee">Employee</th>
            <th data-column-id="shipper">Shipper</th>
            <th data-column-id="shipaddress">Ship Address</th>
            <th data-column-id="shipcity">Ship City</th>
            <th data-column-id="shipcountry">Ship Country</th>
            <th></th>
        </tr>
    </thead>
    <tbody id = "tbody" hidden>
        @foreach (var order in Model) {
            <tr>
                <td>@Html.DisplayFor(orderItem => order.OrderDate)</td>
                <td>@Html.DisplayFor(orderItem => order.Customers.CompanyName)</td>
                <td>@Html.DisplayFor(orderItem => order.Employees.FirstName)</td>
                <td>@Html.DisplayFor(orderItem => order.Shippers.CompanyName)</td>
                <td>@Html.DisplayFor(orderItem => order.ShipAddress)</td>
                <td>@Html.DisplayFor(orderItem => order.ShipCity)</td>
                <td>@Html.DisplayFor(orderItem => order.ShipCountry)</td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = order.OrderID }) |
                    @Html.ActionLink("Details", "Details", new { id = order.OrderID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = order.OrderID })
                </td>
            </tr>
        }
    </tbody>
</table>
