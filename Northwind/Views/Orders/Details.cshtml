@model Northwind.Models.Orders

<dl class="dl-horizontal">
    <dt>Order ID</dt>
    <dd>@Html.DisplayFor(model => model.OrderID)</dd>

    <dt>Date</dt>
    <dd>@Html.DisplayFor(model => model.OrderDate)</dd>

    <dt>Required date</dt>
    <dd>@Html.DisplayFor(model => model.RequiredDate)</dd>

    <dt>Shipped date</dt>
    <dd>@Html.DisplayFor(model => model.ShippedDate)</dd>

    <dt>Freight</dt>
    <dd>@Html.DisplayFor(model => model.Freight)</dd>

    <dt>Ship name</dt>
    <dd>@Html.DisplayFor(model => model.ShipName)</dd>

    <dt>Ship address</dt>
    <dd>@Html.DisplayFor(model => model.ShipAddress)</dd>

    <dt>Ship city</dt>
    <dd>@Html.DisplayFor(model => model.ShipCity)</dd>

    <dt>Ship region</dt>
    <dd>@Html.DisplayFor(model => model.ShipRegion)</dd>

    <dt>Ship postal code</dt>
    <dd>@Html.DisplayFor(model => model.ShipPostalCode)</dd>

    <dt>Ship country</dt>
    <dd>@Html.DisplayFor(model => model.ShipCountry)</dd>

    <hr />
    <dt>Customer</dt>
    <dd>@Html.DisplayFor(model => model.Customers.CompanyName)</dd>

    <dt>Contact</dt>
    <dd>@Html.DisplayFor(model => model.Customers.ContactName)</dd>

    <dt>Phone</dt>
    <dd>@Html.DisplayFor(model => model.Customers.Phone)</dd>

    <hr />
    <dt>Employee</dt>
    <dd>@Html.DisplayFor(model => model.Employees.FirstName) @Html.DisplayFor(model => model.Employees.LastName)</dd>

    <dt>City</dt>
    <dd>@Html.DisplayFor(model => model.Employees.City)</dd>

    <hr />
    <dt>Shipper</dt>
    <dd>@Html.DisplayFor(model => model.Shippers.CompanyName)</dd>

    <dt>Phone</dt>
    <dd>@Html.DisplayFor(model => model.Shippers.Phone)</dd>
</dl>

<hr />

<dl class="dl-horizontal">
    <dt>Products</dt>
    <dd></dd>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Discount</th>
                    <th>Total</th>
                </tr>
            </thead>
            <tbody>
                @{ var totalOrder = 0.0; }
                @foreach (var item in Model.Order_Details)
                {
                    var totalItem = ((float)item.UnitPrice * item.Quantity * (1 - item.Discount) );
                    totalOrder += totalItem;
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Products.ProductName)</td>
                        <td>@Html.DisplayFor(modelItem => item.UnitPrice)</td>
                        <td>@Html.DisplayFor(modelItem => item.Quantity)</td>
                        <td>@Html.DisplayFor(modelItem => item.Discount)</td>
                        <td>@{ @( totalItem.ToString("n2")) }</td>
                    </tr>
                }
            </tbody>
        </table>

    <dt>Order total</dt>
    <dd>@totalOrder.ToString("n2")</dd>

</dl>