@model Northwind.Models.Orders

@{
    ViewBag.Title = "Edit order";
}

@using (Html.BeginForm())
{

    <div class="form-horizontal">
        <h2>Edit order</h2>

        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.OrderID)

        <div>
            <!-- Nav tabs -->
            <ul class="nav nav-tabs" role="tablist" id="myTabs">
                <li role="presentation" class="active"><a href="#order" id="order-tab" aria-controls="order" role="tab" data-toggle="tab">Order data</a></li>
                <li role="presentation"><a href="#products" id="products-tab" aria-controls="products" role="tab" data-toggle="tab">Products</a></li>
            </ul>

            <!-- Tab panes -->
            <div class="tab-content" id="myTabContent">

                <!-- TAB ORDER -->
                <div role="tabpanel" class="tab-pane active" id="order" aria-labelledby="order-tab">
                    <br />
                    <div class="form-group">
                        <label class="control-label col-md-2" for="CustomerID">Customer</label>
                        <div class="col-md-10">
                            @Html.DropDownList("CustomerID", null, String.Empty, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.CustomerID)
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2" for="EmployeeID">Employee</label>
                        <div class="col-md-10">
                            @Html.DropDownList("EmployeeID", null, String.Empty, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.EmployeeID)
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Order date</label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.OrderDate, new { @htmlAttributes = new { @class = "form-control" }, })
                            @Html.ValidationMessageFor(model => model.OrderDate)
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Required date</label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.RequiredDate, new { @htmlAttributes = new { @class = "form-control" }, })
                            @Html.ValidationMessageFor(model => model.RequiredDate)
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Shipped date</label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.ShippedDate, new { @htmlAttributes = new { @class = "form-control" }, })
                            @Html.ValidationMessageFor(model => model.ShippedDate)
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Ship via</label>
                        <div class="col-md-10">
                            @Html.DropDownList("ShipVia", null, String.Empty, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.ShipVia)
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Freight</label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Freight, new { @htmlAttributes = new { @class = "form-control" }, })
                            @Html.ValidationMessageFor(model => model.Freight)
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Ship name</label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.ShipName, new { @htmlAttributes = new { @class = "form-control" }, })
                            @Html.ValidationMessageFor(model => model.ShipName)
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Ship address</label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.ShipAddress, new { @htmlAttributes = new { @class = "form-control" }, })
                            @Html.ValidationMessageFor(model => model.ShipAddress)
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Ship city</label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.ShipCity, new { @htmlAttributes = new { @class = "form-control" }, })
                            @Html.ValidationMessageFor(model => model.ShipCity)
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Ship Region</label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.ShipRegion, new { @htmlAttributes = new { @class = "form-control" }, })
                            @Html.ValidationMessageFor(model => model.ShipRegion)
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Ship postal code</label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.ShipPostalCode, new { @htmlAttributes = new { @class = "form-control" }, })
                            @Html.ValidationMessageFor(model => model.ShipPostalCode)
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Ship country</label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.ShipCountry, new { @htmlAttributes = new { @class = "form-control" }, })
                            @Html.ValidationMessageFor(model => model.ShipCountry)
                        </div>
                    </div>
                </div>

                <!-- TAB ORDER_DETAILS -->
                <div role="tabpanel" class="tab-pane" id="products" aria-labelledby="products-tab">
                    <br />
                    <div class="form-group">
                        <label class="control-label col-md-2">Products</label>
                        <div class="col-md-10">
                            <table class="table table-hover table-striped" id="grid-data-orders-details">
                                <thead>
                                    <tr>
                                        <th data-column-id="id" data-identifier="true" data-type="numeric" data-visible="false">ID</th>
                                        <th data-column-id="name">Name</th>
                                        <th data-column-id="price">Price</th>
                                        <th data-column-id="quantity">Quantity</th>
                                        <th data-column-id="discount">Discount</th>
                                        <th data-column-id="total">Total</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Order_Details)
                                    {
                                        var totalItem = ((float)item.UnitPrice * item.Quantity * (1 - item.Discount));
                                        <tr>
                                            <td>@Html.DisplayFor(modelItem => item.ProductID)</td>
                                            <td>@Html.DisplayFor(modelItem => item.Products.ProductName)</td>
                                            <td>@Html.DisplayFor(modelItem => item.UnitPrice)</td>
                                            <td>@Html.DisplayFor(modelItem => item.Quantity)</td>
                                            <td>@Html.DisplayFor(modelItem => item.Discount)</td>
                                            <td>@{ @( totalItem.ToString("n2")) }</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="button" class="btn btn-default btn-success" onclick="$().postOrderEdit(@Model.OrderID)" id="bt-confirm-edit">Save changes</button>
                <span class="btn btn-default btn-danger" onclick="$().cancelOrderForm();">Cancel</span>
            </div>
        </div>
    </div>
}

<script>
    $('#grid-data-orders-details').bootgrid();
    $('#grid-data-orders-details-header').prepend('<a class="btn btn-default btn-success edition-link" title="Add product" onclick="$().getOrderCreate();"><span class="glyphicon glyphicon-plus"></span> Add new</a>');

    $(document).ready(function () {
        $('#myTabs a').tab();
    });
</script>